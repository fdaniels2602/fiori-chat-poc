<mvc:View xmlns:core="sap.ui.core" controllerName="za.co.fuad.chatapp.controller.Citations"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:l="sap.ui.layout">
    <Page enableScrolling="false">
    <l:VerticalLayout
        class="sapUiContentPadding"
        width="100%">
        <VBox>
            <FeedListItem
                class="sapUiMediumMarginBottom"
                id="CitationItemsListItem"
                icon="{= ${Role} === 'AI' ? '/images/chatbot.png' : '/images/user.png' }"
                info="{Type}"
                timestamp="{Date}"
                text="{Text}"
                showIcon="true"
                convertLinksToAnchorTags="All">
            </FeedListItem>
            <ScrollContainer horizontal="false" vertical="true" height="400px">
            <List 
                growing="false"
                items="{Citations}"> 
                <headerToolbar>
                    <Toolbar >
                        <core:Icon 
                        src="sap-icon://pdf-attachment"
                        color="Positive"></core:Icon>
                    </Toolbar>
                </headerToolbar>
                <items>
                    <StandardListItem
                        title="{Document}"
                        wrapping="true"
                        description="{Text}" />
                </items>
            </List>
            </ScrollContainer>
        </VBox>
    </l:VerticalLayout>
    </Page>
</mvc:View>
