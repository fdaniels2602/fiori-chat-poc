<mvc:View xmlns:core="sap.ui.core" controllerName="za.co.fuad.chatapp.controller.Citations"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:l="sap.ui.layout">
    <Page enableScrolling="false">
    <l:VerticalLayout
        class="sapUiContentPadding"
        width="100%">
        <VBox>
            <FeedListItem
                class="sapUiMediumMarginBottom"
                id="CitationItemsListItem"
                icon="{= ${Role} === 'AI' ? '/images/chatbot.png' : '/images/user.png' }"
                info="{= ${role} === 'bot' ? 'Citations (' + ${citation_count} + ')' : '' }"
                timestamp="{timestamp}"
                text="{message}"
                showIcon="true"
                convertLinksToAnchorTags="All">
            </FeedListItem>
            <ScrollContainer horizontal="false" vertical="true" height="400px">
            <List 
                growing="false"
                items="{citations}"> 
                <headerToolbar>
                    <Toolbar >
                        <Title text="Citations"/>
                    </Toolbar>
                </headerToolbar>
                <items>
                    <CustomListItem>
                        <VBox >
                        <Link 
                            href="{url}"
                            text="{source}"
                            class="sapUiMediumMarginBegin sapUiMediumMarginBottom sapUiMediumMarginTop"
                        />
                    <Text text="{excerpt}" class="sapUiMediumMarginBegin sapUiMediumMarginBottom"/>
                    </VBox>
                    </CustomListItem>
                </items>
            </List>
            </ScrollContainer>
        </VBox>
    </l:VerticalLayout>
    </Page>
</mvc:View>
