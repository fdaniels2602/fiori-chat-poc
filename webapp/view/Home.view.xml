<mvc:View controllerName="za.co.fuad.chatapp.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.f">
	<f:DynamicPage showFooter="true">
		<f:content>
			<List
				class="sapUiSmallMarginBottom"
				id="HomeList"
				items="{/chat_history}" >
				<FeedListItem
					icon="{= ${role} === 'bot' ? '/images/chatbot.png' : '/images/user.png' }"
					info="{= ${role} === 'bot' ? 'Citations (' + ${citation_count} + ')' : '' }"
					timestamp="{timestamp}"
					text="{message}"
					showIcon="true"
					convertLinksToAnchorTags="All">
					<FeedListItemAction 
						text="Citations" 
						icon="sap-icon://display" 
						key="{url}" 
						press=".onActionPressed" 
						visible="{= ${role} === 'bot' }"/>
				</FeedListItem>
				</List>
		</f:content>
		<f:footer>
			<Toolbar height="75px">
				<FeedInput 
					id="FeedInput" 
					icon="/images/user.png"
					post=".onPost">
				</FeedInput>
			</Toolbar>
		</f:footer>
	</f:DynamicPage>
</mvc:View>
